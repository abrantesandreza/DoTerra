@model List<Category>

<div class="container">
   <div class="row pt-4 pb-3">
       <div class="col-6">
           <h2 class="text-primary">
                Categorias
           </h2>
       </div>
       <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-square m-2"></i> Nova categoria
           </a>
       </div>
   </div>
</div>

<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Categoria
            </th>
            <th>
                Número de identificação
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
            </tr>    
        }
    </tbody>
</table>