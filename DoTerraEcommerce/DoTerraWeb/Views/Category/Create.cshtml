@model Category

<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Criar nova categoria</h2>
            <br />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Nome da categoria</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Número de identificação</label>
            <input type="text" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Voltar</a>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-success form-control">Criar categoria</button>
            </div>
        </div>
        
    </div>
</form>
